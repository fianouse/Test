@model IEnumerable<last_test_tech.Models.Candidat>

@{
    ViewData["Title"] = "Index";
}

<h1>List des Candidatures</h1>

@using (Html.BeginForm())
 {
        <div class="input-group">
            @Html.TextBox("SearchByName", null, new { @class = "form-control", @placeholder = "Entre le nom de candidat" })
            <input type="submit" value="Search" class="btn btn-outline-primary ml-2" />
            <a asp-action="Create" class="btn btn-outline-primary ml-2">Create New</a>
        </div>
 }
<table class="table table-responsive-sm mt-2 p-0">
    <thead class="thead-light">
        <tr>
            <th>
                <label>Id</label>
            </th>
            <th>
                <label>Nom</label>
            </th>
            <th>
                <label>Prenom</label>
            </th>
            <th>
                <label>Mail</label>
            </th>
            <th>
                <label>Tele</label>
            </th>
            <th>
                <label>Niveau d'etude</label>
            </th>
            <th>
                <label>Experience</label>
            </th>
            <th>
                <label>Dernier employeur</label>
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.nom)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.prenom)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.mail)
            </td>
            <td>
                 <span>0</span>@Html.DisplayFor(modelItem => item.tele)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.niveau_detude)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.nbr_anne_exp)
                ans
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.dn_employeur)
            </td>
            <td>
                <form asp-action="Delete" asp-route-id="@item.Id" method="post">
                    <button type="submit" class="btn btn-danger" onclick="return confirm('Voulez-vous supprimer ce candidat ?')">Supprimer</button>
                </form>
            </td>
            <td>
                <a href="~/uploads/@item.CV_path" target="_blank" class="btn btn-outline-primary">CV</a>
            </td>
        </tr>
}
    </tbody>
</table>
